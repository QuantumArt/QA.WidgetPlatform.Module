{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2015",
    "module": "esnext",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "template", "dist"]
}
